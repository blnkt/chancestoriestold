# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[**.{yml,yaml}]
indent_style = space
indent_size = 2

[**.{txt}]
indent_style = space
indent_size = 2

[**.{js, .jsx}]
indent_style = space
indent_size = 2

[**.{scss, .css}]
indent_style = space
indent_size = 2
